import java.util.*;
 
class instagram {
   static String username="kavi";
   static String password="diya";
    public static void login(String x,String y)
    {
        if(x.equals(username)&& y.equals(password))
         {
            System.out.println("Welcome..!!"+x);
         }
        else
         {
            System.out.println("Invalid username or password!!");
            System.out.println("Try again !\n");
            retry();
            
         }
    }
    public static void retry()
    {
        Scanner n=new Scanner(System.in);
        System.out.println("Enter Username: ");
        String x=n.nextLine();
        System.out.println("Enter password :");
        String y=n.nextLine();
        login(x,y);
    }
    
    public static void main(String[] args)
     {
        Scanner n=new Scanner(System.in);
        System.out.println("Enter Username: ");
        String a=n.nextLine();
        System.out.println("Enter password :");
        String b=n.nextLine();
        login(a,b);
        
     }
        
        
        
    
}


output:
    Enter Username: 
kavi
Enter password :
123455
Inavlid username or password!!
Try again !

